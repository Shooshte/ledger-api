{
  "name": "ledger-api",
  "version": "1.0.0",
  "description": "NodeJS TypeScript API for my ledger hobby app.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node --inspect=5858 -r ts-node/register ./src/",
    "start:watch": "nodemon",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "npm test",
        "git add"
      ]
    },
    "ignore": [
      "**/build/**",
      "**/data/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shooshte/ledger-api.git"
  },
  "keywords": [
    "TypeScript",
    "NodeJS",
    "Ledger"
  ],
  "author": "shooshte",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shooshte/ledger-api/issues"
  },
  "homepage": "https://github.com/Shooshte/ledger-api#readme",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mongodb": "^3.1.27",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.2",
    "@types/jest": "^24.0.13",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.3",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-environment-node": "^24.8.0",
    "jest-express": "^1.10.1",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongodb": "^3.2.6",
    "morgan": "^1.9.1"
  }
}
